<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.project.homeplantcare.ui.home_screen.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_plantDetailsFragment"
            app:destination="@id/plantDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_homeFragment_to_articlesDetailsFragment"
            app:destination="@id/articlesDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_homeFragment_to_plantsViewAllFragment"
            app:destination="@id/plantsViewAllFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.project.homeplantcare.ui.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.project.homeplantcare.ui.register.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/plantDetailsFragment"
        android:name="com.project.homeplantcare.ui.plant_details.PlantDetailsFragment"
        android:label="PlantDetailsFragment" />
    <fragment
        android:id="@+id/articlesDetailsFragment"
        android:name="com.project.homeplantcare.ui.article_details.ArticlesDetailsFragment"
        android:label="ArticlesDetailsFragment" />
    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.project.homeplantcare.ui.camera_screen.CameraFragment"
        android:label="CameraFragment" />
    <fragment
        android:id="@+id/plantsViewAllFragment"
        android:name="com.project.homeplantcare.ui.plants_view_all.PlantsViewAllFragment"
        android:label="PlantsViewAllFragment" >
        <action
            android:id="@+id/action_plantsViewAllFragment_to_articlesDetailsFragment"
            app:destination="@id/articlesDetailsFragment" />
    </fragment>
</navigation>