<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="disease"
            type="com.project.homeplantcare.models.DiseaseItem" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_disease_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{disease.name}"
                tools:text="disease.name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_onPrimaryFixedVariant" />

            <TextView
                android:id="@+id/tv_disease_symptoms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{disease.symptoms}"
                tools:text="disease.symptoms"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
